{
    "Routes": [
        {
            "DownstreamPathTemplate": "/connect/{cathAll}",
            "DownstreamScheme": "http",
            "DownstreamHostandPorts": [
                {
                    "Host": "auth-service",
                    "Port": "80"
                }
            ],
            "UpstreamHeaderTransform": {
                "userId": ""
            },
            "UpstreamPathTemplate": "/connect/{cathAll}",
            "UpstreamHttpMethod": [ "Put", "Delete", "Post", "Get" ]
        },
        {
            "DownstreamPathTemplate": "/api/v{version}/notifications/{cathAll}",
            "DownstreamScheme": "http",
            "DownstreamHostandPorts": [
                {
                    "Host": "notifications-api",
                    "Port": "80"
                }
            ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "Bearer",
                "AllowedScopes": []
            },
            "AddHeadersToRequest": {
                "userId": "Claims[sub] > value > |"
            },
            "UpstreamPathTemplate": "/api/v{version}/notifications/{cathAll}",
            "UpstreamHttpMethod": [ "Put", "Delete", "Post", "Get" ]
        },
        {
            "DownstreamPathTemplate": "/api/v{version}/stream/{cathAll}",
            "DownstreamScheme": "http", 
            "DownstreamHostandPorts": [
                {
                    "Host": "streaming-api",
                    "Port": "80"
                }
            ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "Bearer",
                "AllowedScopes": []
            },
            "AddHeadersToRequest": {
                "userId": "Claims[sub] > value > |"
            },
            "UpstreamPathTemplate": "/api/v{version}/stream/{cathAll}",
            "UpstreamHttpMethod": [ "Put", "Delete", "Post", "Get" ]
        }
    ],
    "GlobalConfiguration": {
        "RequestIdKey": "OcRequestId"
    }
}